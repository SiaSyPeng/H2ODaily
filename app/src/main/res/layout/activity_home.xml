<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yhack.h20.h2odaily.HomeActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/lightBlue">


        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/setting"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:onClick="settingClick"
            android:src="@drawable/setting"
            android:padding="10dp"
            android:background="@color/lightBlue"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/cup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@color/lightBlue"
                android:padding="10dp"
                android:src="@drawable/cup_1"
                android:textStyle="bold" />

        </RelativeLayout>



        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="130dp"
            android:ems="10"
            android:padding="10dp"
            android:onClick="checkClick"
            android:text="Check How Many More Cups of Water You Need"
            android:background="@color/brightBlue"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/bottom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp">
            <ImageView
                android:id="@+id/exercise"
                android:layout_alignParentLeft="true"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="exerciseClick"
                android:src="@drawable/exercise"
                android:background="@color/lightPink"
                android:padding="7dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/water"
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="waterClick"
                android:src="@drawable/water"
                android:background="@color/lightPink"
                android:padding="7dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/weight"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:onClick="weightClick"
                android:src="@drawable/weight"
                android:background="@color/lightPink"
                android:padding="7dp"
                android:textStyle="bold"/>

        </RelativeLayout>




    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
